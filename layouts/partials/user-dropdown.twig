<div id="user-dropdown" class="user-dropdown">
	<div class="user-dropdown__menu-profile">
		<div class="user-dropdown__menu-image" style="background-image:url('{{_Media.getMediaUrl(user.profileMedia, 80, 80, {radius: 'max', gravity: 'face', 'crop': 'thumb', type: 'user'})}}');"></div>
		<div class="user-dropdown__menu-content">
			<div class="user-dropdown__menu-name">{{ (user.firstname ~" "~ user.lastname) | truncate(15) | title}}</div>
			<div class="user-dropdown__menu-email">{{user.email | truncate(23)}}</div>
		</div>
	</div>
	<ul class="user-dropdown__menu-navigation">
            {% if _User.isAdminUser() %}
                <li><a class="user-dropdown__menu-navigation-link" href="http://{{network.defaultDomain['domain']}}/admin" target="_blank">Admin</a></li>
            {% endif %}
            <li><a href="{{_AppHelper.buildUrl('user/my-news')}}" class="user-dropdown__menu-navigation-link">My News</a></li><!-- don't open modal, goes to /my-news -->
            <li><a href="#" class="user-dropdown__menu-navigation-link account-modal-link link--following">Following</a></li><!-- open modal at Following Tab -->
            <li><a class="user-dropdown__menu-navigation-link account-modal-link link--profile">Profile</a></li><!-- open modal at Profile Tab -->
            <li><a href="#" class="user-dropdown__menu-navigation-link account-modal-link link--account">My Account</a></li><!-- open modal at My Account Tab -->
            <li><a class="user-dropdown__menu-navigation-link sign-out" href="{{_AppHelper.getLogoffUrl()}}">Sign Out</a></li>
	</ul>
</div>