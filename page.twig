{% set page = _Page.getPageData(slug) %}

{{ set(this, 'title', page.title | raw) }}

<!-- Begin Container -->
<div class="page_section about">
    <section class="container">
        <!-- Begin Terms -->
        <div class="content-wrap terms_page about__content">
            <h3 class="about__content-subHead text-center">{{page.title | raw}}</h3>
            <div class="row">
                <div class="col-full">
                    <div class="about__content-area">
                        {{page.content | raw}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
