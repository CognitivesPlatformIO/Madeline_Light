{{ set(this, 'title', 'Reset Password') }}
{{this.registerJs('AuthController.resetPassword()')}}
<div class="auth">
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane login active forgot-password" id="signIn">
            <div class="login__form-title">Change Your Password</div>
            <p class="text-centers">Make sure it's unique to this account and difficult to guess!</p>
           <form id="resetPasswordForm" class="form-horizontal" action="" method="post">
                <input type="hidden" name="_csrf" value="{{_AppHelper.getCsrfToken()}}" />
                {% if errors | length > 0 %}
                    <div class="alert alert-danger alert-dismissible fade in" role="alert">
                        <button class="close" aria-label="Close" data-dismiss="alert" type="button"><span aria-hidden="true">Ã—</span></button>
                        <ul>
                            {% for errorArr in errors %}
                                {% for error in errorArr %}
                                    <li>{{error}}</li>
                                    {% endfor %}
                                {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                {{_AppForm.input({type:'password',id: 'password', name: 'password', value: '', class: 'form-control', placeholder: 'New Password'}) | raw }}
                {{_AppForm.input({type:'password', name: 'verifypassword', value: '', class: 'form-control', placeholder: 'Verify Password'}) | raw }}
                <div class="button-set__right">
                {{_AppForm.button({type:'submit', name: 'resetPassword', class: 'button', label:'Reset Password'}) | raw }}
                </div>
            </form>
        </div>
    </div>
</div>                               
